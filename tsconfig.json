{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ES2022",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./lib/types",
    "rootDir": "./src",
    "baseUrl": "./",
    "outDir": "./lib/esm",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
